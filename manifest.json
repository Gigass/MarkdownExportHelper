{
  "manifest_version": 3,
  "name": "MarkdownHelper",
  "version": "1.1.1",
  "description": "将Markdown文本导出为长图或PDF文件",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "clipboardRead"
  ],
  "web_accessible_resources": [{
    "resources": ["css/*.css"],
    "matches": ["<all_urls>"]
  }]
} 